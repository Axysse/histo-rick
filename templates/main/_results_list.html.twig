{% if entries is not empty %}
    <h2 class="mt-4">Événements trouvés :</h2>
    <ul class="list-group">
        {% for entry in entries %}
            <li class="list-group-item">
                <strong>{{ entry.title }}</strong> (Année: {{ entry.year }})
                <p>{{ entry.shorttext }}</p>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p class="alert alert-info">Aucun événement trouvé pour l'année sélectionnée.</p>
{% endif %}
