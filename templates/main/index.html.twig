        <article id="resultDiv" class="flex flex-col items-center">
        </article>
    </section>


          <div id="myModal" class="modal">
      <div class="modal-content">
        <span class="close-button">&times;</span>
        <div id="infoDiv" class="flex flex-col justify-center items-center">
