{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <section>
        <h1>HistoRick</h1>
        <p>Choisissez une date</p>
    </section>
    <section>
        <article>
            <div id="map" class="h-[50vh]"></div>
        </article>
        <article>
            <div>
                <label for="yearInput">Sélectionnez une année : <span id="currentYearDisplay"></span></label><br>
