{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<h1 class="text-center h3 mb-3 font-bold text-2xl">Inscription contributeur</h1>
	<section class="flex flex-col justify-center items-center w-[100%] mx-96">

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<article class="flex flex-col items-center justify-center w-[50%] ">
			    {{ form_row(registrationForm.email, {'attr' : {'class': 'bg-white border'}}) }}

			{{ form_row(registrationForm.plainPassword, {
            label: 'Password', 'attr' : {'class': 'bg-white border'}
        }) }}

		</article>
		<article class="flex flex-col items-center justify-center w-[50%]">
			{{ form_row(registrationForm.username, {'attr' : {'class': 'bg-white border'}})}}
		</article>
		{{ form_row(registrationForm.agreeTerms) }}

		<button type="submit" class="border bg-gray-200  mt-8 rounded-xl p-2">Valider</button>
		{{ form_end(registrationForm) }}
	</section>
{% endblock %}
